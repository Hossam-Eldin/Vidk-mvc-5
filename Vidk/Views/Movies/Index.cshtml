@model IEnumerable<Vidk.Models.Movies>

@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())
{
    <p> We don't have any customers yet.</p>

}
else
{

    <table class="table table-bordered table-hover">

        <thead>

            <tr>

                <th>Customer</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var customer in Model)
            {

                <tr>

                    <td>@customer.Name</td>
                </tr>
            }

        </tbody>

    </table>
}