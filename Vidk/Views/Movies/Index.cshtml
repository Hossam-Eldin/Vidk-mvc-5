@model IEnumerable<Vidk.Models.Movies>

@{
    ViewBag.Title = "Index";
}

@if (!Model.Any())
{
    <p> We don't have any Movies yet.</p>

}
else
{

    @Html.ActionLink( "Add New Movie" , "New" ,"Movies", null ,new { @class = "btn btn-info"} )
    <table class="table table-bordered table-hover">

        <thead>

            <tr>

                <th>Movies</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var movie in Model)
            {

                <tr>

                    <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new {id = movie.Id }, null)</td>
                    <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>

                </tr>
            }

        </tbody>

    </table>
}