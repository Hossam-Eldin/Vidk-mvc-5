@model  Vidk.Models.Customer

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
            @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m =>m.Name , new { @class="form-control" })
    </div>
    <div class="form-group">
        <label for="Birthdate">Date of Birthdate</label>
        @Html.TextBoxFor(m => m.Birthdate, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.IsSubscribedToNewsletter) is subscribed to news letter

        </label>
    </div>
}